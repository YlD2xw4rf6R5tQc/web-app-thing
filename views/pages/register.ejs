<!DOCTYPE html lang="en" prefix="og: http://ogp.me/ns#">
<head>
	<% include ../partials/head %>
</head>
<body>
	<div id="app">
		<header>
			<% include ../partials/header %>
			<style>
				.alert {
					margin-bottom: 1rm;
				}
			</style>
			<div class="my-2"></div>
		</header>

                <main class="container mx-auto px-4">
                        <div class="max-w-md mx-auto">
                                <div class="bg-blue-100 border border-blue-300 rounded text-center p-3 mb-4">
                                        <i class="fas fa-info"></i> Passwords are hashed with <code>bcrypt</code>.
                                </div>
                                <div class="bg-white shadow rounded p-4">
                                        <form name="loginForm" action="/register" onSubmit="return checkPasswordConf()" method="post" class="space-y-4">
                                                <div>
                                                        <label for="username" class="block text-sm font-medium"><i class="fas fa-id-card"></i> Username</label>
                                                        <input type="text" id="username" name="username" value="" required autofocus class="mt-1 block w-full border rounded p-2">
                                                </div>
                                                <div>
                                                        <label for="email" class="block text-sm font-medium"><i class="fas fa-at"></i> E-mail</label>
                                                        <input type="text" id="email" name="email" value="" required autofocus class="mt-1 block w-full border rounded p-2">
                                                </div>
                                                <div>
                                                        <label for="password" class="block text-sm font-medium"><i class="fas fa-key"></i> Password</label>
                                                        <input type="password" id="password" name="password" required class="mt-1 block w-full border rounded p-2">
                                                </div>
                                                <div>
                                                        <label for="passwordConf" class="block text-sm font-medium"><i class="fas fa-key"></i> Password (confirm)</label>
                                                        <input type="password" id="passwordConf" name="passwordConf" required class="mt-1 block w-full border rounded p-2">
                                                </div>
                                                <div class="text-right">
                                                        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Login</button>
                                                </div>
                                                <script>
                                                        function checkPasswordConf() {
                                                                if (document.loginForm.elements.password.value != document.loginForm.elements.passwordConf.value) {
                                                                        toastNotification("Passwords do not match!", "danger");
                                                                        return false;
                                                                } else {
                                                                        return true;
                                                                }
                                                        }
                                                </script>
                                        </form>
                                </div>
                        </div>
                </main>
	</div>

	<footer class="footer">
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>