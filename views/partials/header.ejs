<nav class="bg-gray-800 mb-3">
    <div class="container mx-auto px-4 flex justify-between items-center h-16">
        <a class="flex items-center text-white font-bold" href="/">
            <img src="/img/logo.png" class="h-8 mr-2" alt="<%= site.title %>">
            <%= site.title %>
        </a>
        <div class="flex space-x-4 items-center">
            <% if (typeof user != "undefined") { %>
                <a class="text-gray-300 hover:text-white" href="/user/profile">Profile</a>
            <% } %>
            <a class="text-gray-300 hover:text-white" href="/">Home</a>
            <% if (typeof user != "undefined") { %>
                <a class="text-gray-300 hover:text-white" href="/user/settings">Settings</a>
                <a class="text-gray-300 hover:text-white" href="/logout" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Logout</a>
                <form id="logout-form" action="/logout" method="GET" class="hidden"><input type="hidden"></form>
            <% } else { %>
                <a class="text-gray-300 hover:text-white" href="/login">Login</a>
                <a class="text-gray-300 hover:text-white" href="/register">Register</a>
            <% } %>
        </div>
    </div>
</nav>

<% if (errorFlashMessage) { %>
    <script>toastNotification("<%= errorFlashMessage %>", "danger");</script>
<% } else if (successFlashMessage) { %>
    <script>toastNotification("<%= successFlashMessage %>", "success");</script>
<% } %>
